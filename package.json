{
  "name": "myelinbase-backend",
  "version": "2.0.0",
  "description": "Myelin Base RAG Application - Serverless Backend (2025 Edition)",
  "private": true,
  "workspaces": [
    "infrastructure/src/functions/*",
    "infrastructure/src/shared"
  ],
  "scripts": {
    "// --- Local Development ---": "",
    "local:start": "cd local-dev && docker-compose up -d",
    "local:start:nocache": "cd local-dev && docker-compose build --no-cache && docker-compose up -d",
    "local:stop": "cd local-dev && docker-compose down",
    "local:stop:volumes": "cd local-dev && docker-compose down -v",
    "local:reset": "cd local-dev && docker-compose down -v && docker-compose up -d",
    "local:reset:nocache": "cd local-dev && docker-compose down -v && docker-compose build --no-cache && docker-compose up -d",
    "local:logs": "cd local-dev && docker-compose logs -f",
    "local:logs:localstack": "cd local-dev && docker-compose logs -f localstack",
    "// --- Build & Deploy ---": "",
    "build": "cd infrastructure && sam build",
    "build:watch": "cd infrastructure && nodemon --watch src --ext ts,json --exec \"sam build\"",
    "deploy:local": "bash local-dev/scripts/deploy-local.sh",
    "deploy:dev": "cd infrastructure && sam build --no-cache && sam deploy --config-env dev --no-confirm-changeset",
    "deploy:prod": "cd infrastructure && sam build --no-cache && sam deploy --config-env prod --no-confirm-changeset",
    "// --- Documentation ---": "",
    "doc:generate": "cd infrastructure && npx ts-node --project tsconfig.scripts.json scripts/generate-openapi.ts",
    "// --- Testing & Validation ---": "",
    "validate": "cd infrastructure && sam validate",
    "validate:lint": "cd infrastructure && sam validate --lint",
    "test": "NODE_OPTIONS='--max-old-space-size=8192' jest --maxWorkers=2",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "// --- Observability ---": "",
    "logs:dev": "cd infrastructure && sam logs --stack-name myelinbase-backend-dev --tail",
    "logs:prod": "cd infrastructure && sam logs --stack-name myelinbase-backend-prod --tail",
    "// --- Cleanup ---": "",
    "delete:dev": "cd infrastructure && sam delete --stack-name myelinbase-backend-dev --no-prompts",
    "delete:prod": "cd infrastructure && sam delete --stack-name myelinbase-backend-prod",
    "lint": "cd infrastructure && eslint .",
    "lint:fix": "cd infrastructure && eslint . --fix",
    "format": "cd infrastructure && prettier --write ."
  },
  "keywords": [
    "aws",
    "lambda",
    "sam",
    "serverless",
    "rag",
    "bedrock",
    "step-functions",
    "dynamodb",
    "s3"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@aws-sdk/client-bedrock-agent-runtime": "^3.930.0",
    "@aws-sdk/client-bedrock-runtime": "^3.930.0",
    "@aws-sdk/client-dynamodb": "^3.930.0",
    "@aws-sdk/client-lambda": "^3.930.0",
    "@aws-sdk/client-s3": "^3.930.0",
    "@aws-sdk/client-secrets-manager": "^3.930.0",
    "@aws-sdk/client-sfn": "^3.930.0",
    "@aws-sdk/client-ssm": "^3.930.0",
    "@aws-sdk/lib-dynamodb": "^3.930.0",
    "@aws-sdk/s3-request-presigner": "^3.930.0",
    "@aws-sdk/util-dynamodb": "^3.930.0",
    "@jest/test-sequencer": "^30.2.0",
    "@pinecone-database/pinecone": "^6.1.3",
    "ai": "^6.0.31",
    "aws-jwt-verify": "^5.1.1",
    "pdf-parse": "^1.1.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.131",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/pdf-parse": "^1.1.5",
    "aws-sdk-client-mock": "^4.1.0",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "yaml": "^2.3.4"
  }
}
